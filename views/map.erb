<div class="row">
  	<div class="col-lg-12">
      <div id="map"></div>	
    </div>
</div>

<div class="pokemons">
<% @pokemons.each do |pokemon| %>
<div class="row">
<div class="span10" id="rows_pokemon" style="border: 4px solid black">
<div class="row">
<div class="span3" id="image"><img src="/images/pokemon_go.png" alt="Pokemon Go Image" height="100" width="200"></div>
	    	<li>Pokemon Gym Name: <%= pokemon[:name] %></li>
	    	<li>Address: <%= pokemon[:address] %></li>
	    	<li>Website: <%= pokemon[:website] %></li>

<form class = 'deletebutton' method= 'post' action = '/pokemons/<%= pokemon.id %>'>
  <input name = '_method' type = 'hidden' value = 'delete'>
  <input type = 'submit' value = 'delete'>
</form>

<form class = 'pokemonupdate' method= 'get' action = '/pokemons/<%= pokemon.id %>/edit'>
      <input type = 'submit' value = 'edit'>
</form>

<div id="button_update">
	 <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal2">Update Pokemon Gym</button>
</div>



</div>
</div>
 </div>
</div>
<% end %>